{
  "name": "tomrijnbeek-blog-theme",
  "description": "Theme for Tom Rijnbeek's blog.",
  "version": "0.1.0",
  "keywords": [
    "ghost-theme"
  ],
  "engines": {
    "ghost-api": "v2"
  },
  "license": "MIT",
  "author": {
    "name": "Tom Rijnbeek",
    "email": "tom@tomrijnbeek.me"
  },
  "scripts": {
    "scss": "node-sass -o assets/css assets/src/scss/style.scss",
    "scss-watch": "node-sass --watch -o assets/css assets/src/scss/style.scss"
  },
  "config": {
    "posts_per_page": 8,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    }
  },
  "devDependencies": {
    "node-sass": "^7.0.0"
  }
}
